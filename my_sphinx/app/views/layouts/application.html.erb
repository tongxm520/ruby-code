<style type="text/css">

  a {
  background-color: #dff0ed;
  border: 1px solid #efe;
  padding: 1px;
  text-decoration: none;
  }

  .main {
  display: block;
  background-color: #ffffe1;
  border: 1px solid #40679d;
  width: 75%;
  margin: 0 auto;
  padding: 2px;
  }

  .list-head {
  display: block;
  background-color: #cee4f6;
  height: 28px;
  }
  
  .list-head a.new-item, .item .item-operate {
  display: block;
  float: right;
  }

  div.item {
  background-color: #f6f9fc;
  border: 1px solid #fefbfe;
  }

  div.post-topic-block input.query_input {
	-moz-box-sizing: border-box;
	border: 1px solid #bbbbbb;
	font-size: 14px;
	height: 26px;
	padding: 4px 0 0 3px;
	width: 445px;
}


</style>
