<h3><%=@note.title%></h3>
<p><%= @note.body%></p>	
<p>
  <div id="ratingdiv">
		<a href="<%=rate_note_path(@note.id)%>" class="undone" rel="1"></a>
		<a href="<%=rate_note_path(@note.id)%>" class="undone" rel="2"></a>
		<a href="<%=rate_note_path(@note.id)%>" class="undone" rel="3"></a>
		<a href="<%=rate_note_path(@note.id)%>" class="undone" rel="4"></a>
		<a href="<%=rate_note_path(@note.id)%>" class="undone" rel="5"></a>
	</div>
</p>

<style type='text/css'>
	#ratingdiv {overflow:hidden; background-color: #fff;}
	
	#ratingdiv .undone, #ratingdiv .fade {
		background:url("/images/star.gif") -30px 0 no-repeat;
		width:28px;
		display:block;
		height:30px;
		float:left;
		margin-right:4px;
		text-indent:-99999px
	}
	
	#ratingdiv .done {
		background:url("/images/star.gif") no-repeat;
		width:28px;
		display:block;
		height:30px;
		float:left;
		margin-right:4px;
		text-indent:-99999px
	}
	
	#ratingdiv .undone:hover {background-position:0}
</style>

<script type="text/javascript">
jQuery(document).ready(function (){
	jQuery('#ratingdiv .undone').click(function(){
		var div = '#ratingdiv';	
		jQuery(div).html("<img src='/images/load.gif' />");		
		var postdata = "rate=" + jQuery(this).attr('rel');
		var link = jQuery(this).attr('href');

		jQuery.ajax({
		  type: "POST",
		  url: link,
		  data: postdata, 
		  success: function(msg){jQuery(div).html(msg)}});
		  return false;
	});	
	
	jQuery('#ratingdiv .voted').live('click' , function(){
		alert('Already Done!');
		return false;
	});
});
</script>

