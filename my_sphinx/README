@search = Ultrasphinx::Search.new({
      :class_names=>"BizBaseGoodsIndex",
      :query=>"\"#{params[:keywords]}\"",
      :page => params[:page]||1,
      :filters=> {:status=>2,
                  :distance=>0..6000000,
                  },
      :match_mode=>:boolean,
      :per_page=>15,
      :location=> {"lat"=>31.2307, "long"=>121.473},
      :sort_mode=> "extended",
      :weights=> {"goods_name"=>9.0},
      :sort_by=> "distance asc"})
@search.run
@goodses = @search



