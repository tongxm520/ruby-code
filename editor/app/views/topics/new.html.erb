<%=render :partial => "/topics/editor_js" %>
<div style="width: 90%; margin: 0 auto">
  <h1>New topic</h1>
  <% form_for(@topic,:html=>{:id=>"example"}) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p><br />
    <p>
      <label for="editor">Content:</label>
      <textarea id="content" name="topic[content]" cols="100" rows="8" style="width:700px;height:200px;visibility:hidden;"></textarea>
    </p><br />
    <p>
      <%= f.submit 'Create' %>
    </p><br />
  <% end %>

  <%= link_to 'Back', topics_path %>
</div>





